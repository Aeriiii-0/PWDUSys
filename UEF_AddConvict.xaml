                            <ComboBoxItem Content="I."/>
                            <ComboBoxItem Content="II."/>
                            <ComboBoxItem Content="III."/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="10">
                        <Label Content="Gender*" Margin="0,0,0,5" FontWeight="Medium" Foreground="Black" FontSize="13"/>
