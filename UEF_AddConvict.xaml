                            </ComboBox>

                            <!-- Year TextBox -->
                            <TextBox x:Name="BirthYearTextBox" 
                 Grid.Column="4"
                 Style="{StaticResource RoundedTextBoxStyle}" Tag=" Year"/>
                        </Grid>
