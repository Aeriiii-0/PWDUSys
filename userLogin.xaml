<Window x:Class="Social_Blade_Dashboard.userLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Social_Blade_Dashboard"
        mc:Ignorable="d"
        Title="Login - Social Blade Dashboard" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F6F5F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left side - 60% for image/branding -->
            <ColumnDefinition Width="6*"/>
            <!-- Right side - 40% for login form -->
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Decorative/Branding Area -->
        <Border Grid.Column="0" 
                CornerRadius="0,20,20,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2b4a40" Offset="0"/>
                    <GradientStop Color="#338b19" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Decorative Content -->
            <Grid>
                <Viewbox Margin="19,50,23,50" Stretch="Uniform">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Large Placeholder Icon -->
                        <!-- Logo Image -->
                        <Image Source="/PWUDS.png" 
                               Width="474" 
                               Height="279" 
                               Margin="0,0,0,30"
                               Stretch="Uniform"/>

                        <!-- Welcome Text -->
                        <TextBlock Text="Welcome to PWUDS!" 
                                 FontSize="36" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 TextAlignment="Center"
                                 Margin="0,0,0,15" Width="428"/>

                        <TextBlock Text="City of Binan x DILG" 
                                 FontSize="18" 
                                 Foreground="White" 
                                 TextAlignment="left"
                                 Opacity="0.9" Width="354"/>

                        <!-- Decorative Elements -->
                        <Grid Margin="0,50,0,0" Width="300" Height="100">
                            <Ellipse Fill="White" Opacity="0.1" Width="20" Height="20" 
                                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Ellipse Fill="White" Opacity="0.15" Width="15" Height="15" 
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <Rectangle Fill="White" Opacity="0.08" Width="25" Height="25" 
                                     HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        </Grid>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Border>

        <!-- Right Side - Login Form -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="20,0,0,20"
                Padding="50">

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Stretch" 
                        MaxWidth="350">

                <!-- Login Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">
                    <!-- Account Circle Icon -->
                    <materialDesign:PackIcon Kind="AccountCircle" 
                                           Width="302" 
                                           Height="90" 
                                           Foreground="#2b4a40" 
                                           Margin="0,0,0,20"/>

                    <!-- Welcome Label -->
                    <TextBlock Text="Log In" 
                             FontSize="36" 
                             FontWeight="Bold" 
                             Foreground="#2b4a40" 
                             TextAlignment="Center"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="Welcome back! Please sign in to continue." 
                             FontSize="16" 
                             Foreground="#2b4a40" 
                             TextAlignment="Center"
                             Opacity="0.8"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel>
                    <!-- Username Field -->
                    <Border Background="White" 
                            CornerRadius="8" 
                            Margin="0,0,0,18"
                            Padding="18,14">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" 
                                                   Foreground="#2b4a40" 
                                                   Width="22" 
                                                   Height="22" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,14,0"/>
                            <TextBox x:Name="UsernameTextBox"
                                   Text="Username or email"
                                   FontSize="16"
                                   Foreground="#666666"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   VerticalAlignment="Center"
                                   GotFocus="UsernameTextBox_GotFocus"
                                   LostFocus="UsernameTextBox_LostFocus"/>
                        </StackPanel>
                    </Border>

                    <!-- Password Field -->
                    <Grid Margin="0,0,0,22">
                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="18,14"/>
                        <StackPanel Orientation="Horizontal" Margin="18,14">
                            <materialDesign:PackIcon Kind="Lock" 
                                                   Foreground="#2b4a40" 
                                                   Width="22" 
                                                   Height="22" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,14,0"/>
                            <PasswordBox x:Name="PasswordBox"
                                       FontSize="16"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       Width="240"/>
                        </StackPanel>
                    </Grid>

                    <!-- Remember Me and Forgot Password -->
                    <Grid Margin="0,0,0,30">
                        <TextBlock Text="Forgot password?" 
                                 FontSize="14" 
                                 Foreground="#338b19" 
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 TextDecorations="Underline"
                                 Cursor="Hand"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                            Content="Sign In"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Height="55"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#338b19" Offset="0"/>
                                <GradientStop Color="#2b4a40" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                  CornerRadius="8" 
                                                  BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>


                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>