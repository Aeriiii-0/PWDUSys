<Window x:Class="Social_Blade_Dashboard.SplashLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading"
        Height="850" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="Logos/bg.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <!-- Title Text -->
        <TextBlock Text="PEOPLE WHO USE DRUGS SYSTEM"
                   FontWeight="Bold"
                   Foreground="#184B27"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,666,0,0"
                   FontSize="30"
                   FontFamily="Segoe UI"/>
        <!-- Main Container for Center Logo and Spinner -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Circular Loading Spinner with 6 logos (including center) -->
            <Canvas x:Name="SpinnerCanvas" Width="1200" Height="850" RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="SpinnerRotateTransform" Angle="0"/>
                </Canvas.RenderTransform>
                <!-- Logo 1: Bagong Pilipinas -->
                <Image x:Name="Dot1" Source="Logos/bagong_pilipinas_logo.png" 
                       Width="294" Height="258" 
                       Canvas.Left="142" Canvas.Top="310" 
                       RenderTransformOrigin="0.166,1.229" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale1" ScaleX="0.3" ScaleY="0.3"/>
                    </Image.RenderTransform>
                </Image>
                <!-- Logo 2: City Binan -->
                <Image x:Name="Dot2" Source="Logos/city_binan_logo.png" 
                       Width="294" Height="210" 
                       Canvas.Left="825" Canvas.Top="312" 
                       RenderTransformOrigin="0.5,0.5" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale2" ScaleX="0.3" ScaleY="0.3"/>
                    </Image.RenderTransform>
                </Image>
                <!-- Logo 3: DILG -->
                <Image x:Name="Dot3" Source="Logos/dilg_logo.png" 
                       Width="160" Height="170" 
                       Canvas.Left="714" Canvas.Top="132" 
                       RenderTransformOrigin="0.5,0.5" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale3" ScaleX="0.3" ScaleY="0.3"/>
                    </Image.RenderTransform>
                </Image>
                <!-- Logo 4: PDEA -->
                <Image x:Name="Dot4" Source="Logos/pdea_logo.png" 
                       Width="164" Height="165" 
                       Canvas.Left="316" Canvas.Top="130" 
                       RenderTransformOrigin="0.5,0.5" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale4" ScaleX="0.3" ScaleY="0.3"/>
                    </Image.RenderTransform>
                </Image>
                <!-- Logo 5: PNP -->
                <Image x:Name="Dot5" Source="Logos/pnp_logo.png" 
                       Width="168" Height="212" 
                       Canvas.Left="516" Canvas.Top="48" 
                       RenderTransformOrigin="0.951,1.068" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale5" ScaleX="0.3" ScaleY="0.3"/>
                    </Image.RenderTransform>
                </Image>
                <!-- Logo 6: City Anti Drugs (Center Logo) -->
                <Image x:Name="Dot6" Source="Logos/city_anti_drugs_logo.png" 
                       Width="423" Height="408" 
                       Canvas.Left="396" Canvas.Top="221" 
                       RenderTransformOrigin="0.5,0.5" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Panel.ZIndex="1"
                       Opacity="0">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="Scale6" ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </Grid>
        <!-- Loading Text -->
        <TextBlock x:Name="LoadingText"
                   Text="Loading All Resources..."
                   FontWeight="SemiBold"
                   Foreground="#1A6213"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,758,0,0"
                   FontSize="18"
                   FontFamily="Segoe UI"/>
        <!-- Loading Progress Bar -->
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,780,0,0">
            <Border Background="#E0E0E0" 
                    Width="400" 
                    Height="10" 
                    CornerRadius="6"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1">
                <Border x:Name="ProgressBarFill"
                        Background="#0D4A1A"
                        Height="10"
                        CornerRadius="5"
                        HorizontalAlignment="Left"
                        Width="0"
                        Margin="1"/>
            </Border>
            <TextBlock x:Name="ProgressText"
                       Text="0%"
                       FontSize="14"
                       Foreground="#1A6213"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"
                       FontFamily="Segoe UI"/>
        </StackPanel>
    </Grid>
</Window>