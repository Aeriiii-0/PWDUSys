<UserControl x:Class="Social_Blade_Dashboard.DashboardUSC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="850"
             d:DesignWidth="1100">

    <Grid Background="#F4F8F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="📊 Dashboard Overview" 
                          FontSize="16" 
                          FontWeight="Medium"
                          Foreground="#2F5233"
                          Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Card 1 - Welcome Card -->
            <Border Grid.Column="0" Grid.Row="0"
                    Background="#D8F0E0" 
                    CornerRadius="16" 
                    Padding="25"
                    Height="180">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Welcome Back!" 
                                  FontSize="26" 
                                  FontWeight="Bold"
                                  Foreground="#1A3D1F"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="We're here to help you keep track of records safely" 
                                  FontSize="14" 
                                  Foreground="#2F5233"
                                  Margin="0,0,0,3"/>
                        <TextBlock Text="and manage them efficiently."
                                  FontSize="14" 
                                  Foreground="#2F5233"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="80" 
                            Height="80"
                            Background="#B8E6C6" 
                            CornerRadius="40"
                            VerticalAlignment="Center">
                        <TextBlock Text="📈" 
                                 FontSize="32" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Card 2 - Statistics Card -->
            <Border Grid.Column="2" Grid.Row="0"
                    Background="#C2E8CC" 
                    CornerRadius="16" 
                    Padding="25"
                    Height="180">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Quick Stats" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#1A3D1F"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Total Records: 1,247" 
                                  FontSize="14" 
                                  Foreground="#2F5233"
                                  Margin="0,0,0,3"/>
                        <TextBlock Text="Last Updated: Today"
                                  FontSize="14" 
                                  Foreground="#2F5233"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="80" 
                            Height="80"
                            Background="#9CDCAB" 
                            CornerRadius="40"
                            VerticalAlignment="Center">
                        <TextBlock Text="📊" 
                                 FontSize="32" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Chart Area for Database Records -->
            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                    Background="White" 
                    CornerRadius="16" 
                    Padding="25"
                    BorderBrush="#E0F2E3"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Chart Header -->
                    <Border Grid.Row="0"
                            Background="#F0F8F2"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="📈"
                                      FontSize="20"
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Highest Crime Recorded"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#1A3D1F"
                                          Margin="0,0,0,2"/>
                                <TextBlock Text="Visual representation of your data over time"
                                          FontSize="12"
                                          Foreground="#4A6B4D"/>
                            </StackPanel>

                            <Border Grid.Column="2"
                                    Background="#D8F0E0"
                                    CornerRadius="15"
                                    Padding="8,4">
                                <TextBlock Text="Live Data"
                                          FontSize="10"
                                          FontWeight="Medium"
                                          Foreground="#2F5233"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Chart Container -->
                    <Border Grid.Row="1"
                            Background="#FAFCFB"
                            CornerRadius="12"
                            BorderBrush="#E8F5EA"
                            BorderThickness="2"
                            Padding="20">
                        <Grid x:Name="ChartContainer">
                            <!-- This is where your line chart control will be placed -->
                            <TextBlock Text="Will put a line chart"
                                      FontSize="16"
                                      Foreground="#6B8E6E"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontStyle="Italic"/>
                            
                            <!-- Placeholder grid lines for visualization -->
                            <Grid Background="Transparent" Opacity="0.3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Horizontal grid lines -->
                                <Rectangle Grid.Row="1" Grid.ColumnSpan="4" Height="1" Fill="#B8E6C6" VerticalAlignment="Top"/>
                                <Rectangle Grid.Row="2" Grid.ColumnSpan="4" Height="1" Fill="#B8E6C6" VerticalAlignment="Top"/>
                                <Rectangle Grid.Row="3" Grid.ColumnSpan="4" Height="1" Fill="#B8E6C6" VerticalAlignment="Top"/>
                                
                                <!-- Vertical grid lines -->
                                <Rectangle Grid.Column="1" Grid.RowSpan="4" Width="1" Fill="#B8E6C6" HorizontalAlignment="Left"/>
                                <Rectangle Grid.Column="2" Grid.RowSpan="4" Width="1" Fill="#B8E6C6" HorizontalAlignment="Left"/>
                                <Rectangle Grid.Column="3" Grid.RowSpan="4" Width="1" Fill="#B8E6C6" HorizontalAlignment="Left"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>