<UserControl x:Class="Social_Blade_Dashboard.PWDUS_Splash"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Social_Blade_Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Rotation Animation -->
        <Storyboard x:Key="RotationStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:1"/>
        </Storyboard>

        <!-- Logo Style with Shadow -->
        <Style x:Key="LogoStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="White" 
                                    BlurRadius="10" 
                                    ShadowDepth="2" 
                                    Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Background Image Brush -->
        <ImageBrush x:Key="BackgroundImageBrush" ImageSource="Images/bg.png" Stretch="UniformToFill"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundImageBrush}">
        <!-- Main Content -->
        <Viewbox Stretch="Uniform" Margin="50">
            <Grid Width="1100" Height="750">

                <!-- Background Circle -->

                <!-- Main Title -->
                <TextBlock Text="People Who Use Drugs System"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="#26463c"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="0,50,0,0"
                          TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" 
                                        BlurRadius="3" 
                                        ShadowDepth="1" 
                                        Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Subtitle -->

                <!-- Center Logo Container -->
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50">

                    <!-- Rotating Logo Icons in Circle -->
                    <!-- PNP Logo (Top) -->
                    <Image x:Name="Logo1" 
                           Source="Images/pnp_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="0,-200,0,0"/>

                    <!-- Bagong Pilipinas Logo (Top Right) -->
                    <Image x:Name="Logo2" 
                           Source="Images/bagong_pilipinas_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="141,-141,0,0"/>

                    <!-- Anti-Drugs Abuse Council Logo (Right) -->
                    <Image x:Name="Logo3" 
                           Source="Images/anti_drugs_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="200,0,0,0"/>

                    <!-- City of Binan Logo (Bottom Right) -->
                    <Image x:Name="Logo4" 
                           Source="Images/binan_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="141,141,0,0"/>

                    <!-- DILG Logo (Bottom) -->
                    <Image x:Name="Logo5" 
                           Source="Images/dilg_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="0,200,0,0"/>

                    <!-- PDEA Logo (Bottom Left) -->
                    <Image x:Name="Logo6" 
                           Source="Images/pdea_logo.png"
                           Width="80" Height="80"
                           Style="{StaticResource LogoStyle}"
                           Margin="-141,141,0,0"/>

                    <!-- Additional positioning for Left and Top Left if needed -->
                    <Image x:Name="Logo7" 
                           Source="Images/pnp_logo.png"
                           Width="60" Height="60"
                           Style="{StaticResource LogoStyle}"
                           Margin="-200,0,0,0"
                           Opacity="0.7"/>

                    <Image x:Name="Logo8" 
                           Source="Images/bagong_pilipinas_logo.png"
                           Width="60" Height="60"
                           Style="{StaticResource LogoStyle}"
                           Margin="-141,-141,0,0"
                           Opacity="0.7"/>
                </Grid>

                <!-- Loading Text -->
                <TextBlock x:Name="LoadingText"
                          Text="Loading System..."
                          FontSize="24"
                          FontWeight="Medium"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom"
                          Margin="0,0,0,100">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" 
                                        BlurRadius="2" 
                                        ShadowDepth="1" 
                                        Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar"
                            Width="300"
                            Height="8"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,60"
                            Background="#4CFFFFFF"
                            Foreground="White"
                            IsIndeterminate="True"/>

                <!-- Version Info -->

                <!-- Copyright -->

            </Grid>
        </Viewbox>
    </Grid>
</UserControl>