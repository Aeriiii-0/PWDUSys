<UserControl x:Class="Social_Blade_Dashboard.DashboardUSC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="850"
             d:DesignWidth="1100">

    <Grid Background="#F6F5F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="📶Good Day!" 
                          FontSize="16" 
                          FontWeight="Medium"
                          Foreground="#666"
                          Margin="0,0,0,5"/>
            </StackPanel>


        </Grid>

        <Grid Grid.Row="1" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#E6F7F1" 
                        CornerRadius="20" 
                        Padding="30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Welcome Back!" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      Foreground="#2D5A41"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="We're here to help you efficiently manage and" 
                                      FontSize="16" 
                                      Foreground="#4A7C59"
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="access case information every step of the way."
                                      FontSize="16" 
                                      Foreground="#6B8E79"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                                Width="120" 
                                Height="100"
                                Background="#D1EDE3" 
                                VerticalAlignment="Center">
                            <TextBlock Text="👤" 
                                     FontSize="48" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="2"
                        Background="White" 
                        CornerRadius="20" 
                        Padding="25" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="To-Do List" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center" Width="153"/>
                            </StackPanel>

                            <Button x:Name="AddTaskButton" Height="50"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Content="+ "
                                    FontSize="25"
                                    FontWeight="Bold"
                                    Foreground="#2D5A41"
                                    Click="AddTaskButton_Click"
                                    ToolTip="Add new note" Grid.ColumnSpan="2" Margin="450,0,0,0"/>
                        </Grid>

                        <Border x:Name="NewTaskPanel"
                                Grid.Row="1"
                                Background="#F0F8F4" 
                                CornerRadius="10" 
                                Padding="15"
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox x:Name="NewTaskTextBox"
                                        Grid.Row="0"
                                        FontSize="14"
                                        Padding="5"
                                        BorderThickness="1"
                                        BorderBrush="#D1EDE3"
                                        Background="White"
                                        Margin="0,0,0,10"
                                        Text="Enter your note here..."
                                        Foreground="#999"
                                        GotFocus="NewTaskTextBox_GotFocus"
                                        LostFocus="NewTaskTextBox_LostFocus"
                                        KeyDown="NewTaskTextBox_KeyDown"/>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="SaveTaskButton"
                                            Content="Save"
                                            Background="#2D5A41"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="15,5"
                                            Margin="0,0,10,0"
                                            FontSize="12"
                                            Click="SaveTaskButton_Click"/>
                                    <Button x:Name="CancelTaskButton"
                                            Content="Cancel"
                                            Background="#999"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="15,5"
                                            FontSize="12"
                                            Click="CancelTaskButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="TasksContainer">

                                <Border Background="#F9F9F9" 
                                        CornerRadius="10" 
                                        Padding="15" 
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" 
                                                 VerticalAlignment="Top"
                                                 Margin="0,2,15,0"
                                                 Checked="TaskCheckBox_Checked"/>

                                        <TextBlock Grid.Column="1"
                                                  Text="Explore the app."
                                                  FontWeight="Medium"
                                                  FontSize="14"
                                                  Foreground="#333"
                                                  TextWrapping="Wrap"
                                                  VerticalAlignment="Center"/>

                                        <Button Grid.Column="2"
                                                Content="×"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#999"
                                                FontSize="16"
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Top"
                                                Click="DeleteTaskButton_Click"
                                                ToolTip="Delete note"/>
                                    </Grid>
                                </Border>


                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <StackPanel Grid.Column="2">
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#333"
                                  Margin="0,0,0,15"/>

                        <Border Background="#F0F8F4" 
                                CornerRadius="10" 
                                Padding="15"
                                Margin="0,0,0,10">
                            <TextBlock Text="💡 Tip: Use the + button to add new notes to your to-do list. Checking a note will automatically remove it from the list!" 
                                      FontSize="12"
                                      Foreground="#4A7C59"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>